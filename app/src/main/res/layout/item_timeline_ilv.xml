<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_medium">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/image_cartlist"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/default_photo"/>

            <LinearLayout  android:id="@+id/layout_item_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/activity_horizontal_margin">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_sales_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:text="Sales Name"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/cart_prtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="Firmino"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/txt_list_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:visibility="visible"
                        android:textSize="10dp"
                        android:layout_marginRight="8dp"
                        android:text="2019-11-11"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/cart_prprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set finish toko ABC pada 08:30"
                    android:textSize="@dimen/text_size_xmedium"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="@dimen/margin_small"/>


                <LinearLayout
                    android:id="@+id/centerContent5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <LinearLayout android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:background="@drawable/dark_background_click"
                        android:id="@+id/ll_koment">

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/image_new_chat"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chat_gray"/>

                        <TextView
                            android:id="@+id/txt_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="0 Komen"
                            android:textColor="#676464"
                            android:textSize="12sp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:background="@drawable/dark_background_click"
                        android:id="@+id/ll_like">

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/image_like"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/like_icon"/>

                        <TextView
                            android:id="@+id/txt_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="Like"
                            android:textColor="#676464"
                            android:textSize="12sp"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/view_width_small"
            android:background="@color/grey_light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

</LinearLayout>
